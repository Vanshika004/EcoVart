rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public products read by anyone
    match /products/{productId} {
      allow read: if true;

      // Only admins can write/modify product verification or global fields.
      allow write: if isAdmin();

      // Vendors can create products where vendorId == request.auth.uid
      allow create: if request.auth != null && request.resource.data.vendorId == request.auth.uid;
    }

    // Users collection - allow users to read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User footprint histories - users may add/view their own history
    match /users/{userId}/history/{docId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      // No deletes from client-side in this simple policy
      allow delete: if false;
    }

    // Orders - users may create orders; read for the owning user; admin may read all
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // Fallback deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper function to determine admin role based on users collection
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
